import math

def get_positive_integer():
    while True:
        user_input = input("Введите положительное целое число: ")
        try:
            number = int(user_input)
            if number < 0:
                raise ValueError("Число должно быть неотрицательным.")
            return number
        except ValueError:
            print("Ошибка: Введите корректное положительное целое число.")

def main():
    num = get_positive_integer()
    try:
        result = math.factorial(num)
        print(f"Факториал числа {num} равен {result}")
    except (OverflowError, ValueError) as e:
        print(f"Ошибка при вычислении факториала: {e}")

if __name__ == "__main__":
    main()
