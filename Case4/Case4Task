import random

def play_game():
    print("Добро пожаловать в игру 'Угадай число'!")
    print("Я загадал число от 1 до 100. У вас есть 7 попыток, чтобы угадать его.")
    
    secret_number = random.randint(1, 100)
    attempts = 7
    
    while attempts > 0:
        try:
            guess = int(input(f"Осталось попыток {attempts}. Введите ваше число: "))
            
            if guess < 1 or guess > 100:
                print("Введите число в диапазоне от 1 до 100!")
                continue

            if guess < secret_number:
                print("Слишком маленькое!")
            elif guess > secret_number:
                print("Слишком большое!")
            else:
                print(f"Поздравляю! Вы угадали число {secret_number}!")
                break

            attempts -= 1

        except ValueError:
            print("Ошибка: введите целое число!")

    else:
        print(f"Попытки закончились. Загаданное число было {secret_number}.")

if __name__ == "__main__":
    play_game()
